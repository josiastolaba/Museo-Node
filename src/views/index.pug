doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="style.css")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
        title Museo
    body
        h1 Museo Metropolitano de Arte 

        .buscador
          h4 Ingresar Datos
          form(action="/search" method="get" id="form")
            .dep
              label(for="departmentId") Departamento:
              select(name="departmentId" id="departmentId")
                option(value="") Elegir opcion
                each dep in depTraducidos 
                  option(value= dep.departmentId) #{dep.displayName}
            .cla
              label(for="keyword") Clave:
              input(type="text" name="keyword" id="keyword")
            .loc
              label(for="location") Ubicaci√≥n:
              input(type="text" name="location" id="location")
            p(id="erro")
            button.buscar(type="submit") Buscar

    script(src="function.js")